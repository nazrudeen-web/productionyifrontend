---
const { data } = Astro.props;

function formatNumber(n) {
  return new Intl.NumberFormat("en", {
    notation: "compact",
    compactDisplay: "short",
    maximumFractionDigits: 1,
  }).format(n);
}
---

<!-- 2. Channel Stats -->
<section class="mx-auto mt-6 max-w-4xl md:rounded-xl bg-white p-6 shadow">
  <h2 class="text-xl font-semibold text-gray-800 mb-4">Channel Statistics</h2>
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 text-center">
    <div class="rounded bg-gray-100 p-4">
      <div class="text-xl font-bold text-amber-600">
        {formatNumber(data.subscriberCount)}
      </div>
      <div class="text-sm text-gray-600">Subscribers</div>
    </div>
    <div class="rounded bg-gray-50 p-4">
      <div class="text-xl font-bold text-green-600">
        {formatNumber(data.viewCount)}
      </div>
      <div class="text-sm text-gray-600">Total Views</div>
    </div>
    <div class="rounded bg-gray-50 p-4">
      <div class="text-xl font-bold text-blue-600">{data.videoCount}</div>
      <div class="text-sm text-gray-600">Videos Uploaded</div>
    </div>
  </div>
</section>
