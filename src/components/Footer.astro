---
import { Button } from "@/components/ui/button";
import { Youtube, Twitter, Facebook, Play, ArrowRight } from "lucide-react";
---

<footer
  class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white relative overflow-hidden"
>
  {/* Background Pattern */}
  <div class="absolute inset-0 bg-grid-white/[0.02] -z-10"></div>
  <div
    class="absolute top-0 left-1/4 w-96 h-96 bg-red-500/10 rounded-full blur-3xl -z-10"
  >
  </div>
  <div
    class="absolute bottom-0 right-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl -z-10"
  >
  </div>

  <div class="container max-w-7xl mx-auto px-4 py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
      <div class="space-y-6 md:col-span-1">
        <div class="flex items-center space-x-3">
          <div class="relative">
            <div
              class="flex h-10 w-10 items-center justify-center rounded-xl bg-gradient-to-br from-red-600 to-red-700 shadow-lg"
            >
              <Play className="h-5 w-5 text-white fill-white" />
            </div>
            <div
              class="absolute -top-1 -right-1 h-3 w-3 rounded-full bg-green-500 border-2 border-slate-900"
            >
            </div>
          </div>
          <div class="flex flex-col">
            <span class="font-bold text-xl text-white leading-tight">
              YouTubers Income
            </span>
            <span class="text-xs text-slate-400 font-medium">
              Earnings & Analytics
            </span>
          </div>
        </div>
        <p class="text-slate-300 leading-relaxed">
          The most accurate YouTube income estimator. Discover how much any
          channel makes with our advanced analytics platform.
        </p>
        <div class="flex space-x-3">
          <!-- <Button
            variant="ghost"
