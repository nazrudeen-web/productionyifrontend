---
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import { ArrowRight, Calendar } from "lucide-react";

const blogPosts = [
  {
    title: "How Much Do YouTubers Make per 1K Views in 2025?",
    excerpt:
      "Learn how much YouTube pays per 1,000 views (CPM) and how creators can increase earnings.",
    category: "Guide",
    date: "Dec 15, 2024",
    image: "/blogs/youtube-earnings-chart.webp",
    href: "/blog/How-Much-Money-Do-YouTubers-Make-Per-1,000-Views-in-2025",
  },
  {
    title: "Grow a YouTube Channel from Zero – 2025 Beginner Guide",
    excerpt:
      "Starting a YouTube channel in 2025? Learn how to pick a niche, make content, and grow fast — even with zero subscribers.",
    category: "Guide",
    date: "Dec 12, 2024",
    image: "/blogs/youtube-shorts-revenue.webp",
    href: "/blog/How-to-Grow-a-YouTube-Channel-from-Scratch-2025-Guide",
  },
  {
    title:
      "YouTube CPM vs RPM in 2025 – What’s the Difference and Why It Matters",
    excerpt:
      "Confused by YouTube metrics like CPM and RPM? This 2025 guide explains what they mean, how they affect your earnings, and how to increase both.",
    category: "Guide",
    date: "Dec 10, 2024",
    image: "/blogs/youtube-cpm-rates.webp",
    href: "/blog/youtube-cpm-vs-rpm-2025",
  },
];
---

<section id="blog" class="py-12 md:py-20">
  <div class="container max-w-7xl mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-xl sm:text-2xl md:text-3xl font-bold mb-4">
        Latest YouTube Insights
      </h2>
      <p class="text-muted-foreground max-w-2xl mx-auto text-sm sm:text-base">
        Stay updated with the latest YouTube trends, monetization tips, and
        channel analytics.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      {
        blogPosts.map((post, index) => (
          <Card key={index} className="hover:shadow-lg transition-shadow">
            <a
              href={`${post.href}`}
              aria-label={`Read full article: ${post.title}`}
            >
              <div class="aspect-video overflow-hidden rounded-t-lg">
                <img
                  src={post.image}
                  alt={`YouTube earnings guide: ${post.title}`}
                  width="640"
                  height="360"
                  class="w-full h-full object-cover"
                />
              </div>
              <CardHeader className="pb-3">
                <div class="flex items-center gap-2 mb-2">
                  <Badge variant="secondary">{post.category}</Badge>
                  <div class="flex items-center gap-1 text-xs text-muted-foreground">
                    <Calendar className="h-3 w-3" />
                    {post.date}
                  </div>
                </div>
                <CardTitle className="text-base md:text-lg leading-tight">
                  {post.title}
                </CardTitle>
              </CardHeader>
              <CardContent className="pt-0">
                <p class="text-sm text-muted-foreground mb-4">{post.excerpt}</p>
                <a
                  href={`${post.href}`}
                  aria-label={`Read full article: ${post.title}`}
                >
                  <Button
                    variant="ghost"
                    size="sm"
                    className="px-3 py-1.5 min-h-[36px] font-medium flex items-center gap-1 text-sm"
                  >
                    Read More
                    <ArrowRight className="h-4 w-4" />
                  </Button>
                </a>
              </CardContent>
            </a>
          </Card>
        ))
      }
    </div>

    <div class="text-center">
      <a href="/blog">
        <Button variant="outline">
          View All Articles
          <ArrowRight className="ml-2 h-4 w-4" />
        </Button>
      </a>
    </div>
  </div>
</section>
