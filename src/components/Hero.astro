<section
  class="border-b border-gray-200 md:py-12 text-gray-900 text-base"
  style="
    background-color: #f0f2f5;
    background-image: radial-gradient(#d1d1d1 0.5px, transparent 0.5px),
                      radial-gradient(#d1d1d1 0.5px, transparent 0.5px);
    background-size: 18px 18px;
    background-position: 0 0, 9px 9px;
  "
>
  <div
    class="mx-auto max-w-4xl md:rounded-xl bg-bcPrimary px-4 py-8 text-center shadow md:py-16 md:px-10"
  >
    <h1
      class="text-xl tracking-tight uppercase font-extrabold text-black font-poppins md:text-3xl"
    >
      Discover How Much YouTubers Make from Ads
    </h1>
    <p class="mt-2 text-sm text-gray-600 max-w-2xl mx-auto md:text-base">
      Curious how much YouTubers really earn? Use our free tool to check YouTube
      ad revenue for any channel — fast, accurate, and up-to-date.
    </p>
    <!-- Search Form -->
    <form method="get" class="mt-8">
      <div class="flex flex-col items-stretch gap-3 md:flex-row">
        <!-- Input with icon on the left -->
        <div class="relative flex-1">
          <span
            class="absolute inset-y-0 left-3 flex items-center text-tSecondary"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"
              ></path>
            </svg>
          </span>
          <input
            type="text"
            name="channel"
            id="channel-input"
            placeholder="Example: channel name, @handle, channel ID, or YouTube URL"
            class="w-full bg-bcSecondary rounded-md border border-red-500 py-4 pr-6 pl-10 text-base text-gray-800 shadow-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          />
        </div>
        <!-- CTA Button -->
        <button
          type="submit"
          class="w-full rounded-md bg-[#000] px-6 py-3 text-base font-semibold text-white hover:bg-accent sm:w-auto cursor-pointer tracking-wider"
          >Check Income</button
        >
      </div>
    </form>

    <!-- Suggested Tags -->
    <div class="mt-6 flex flex-wrap justify-center gap-2 text-sm text-gray-800">
      <button
        class="px-3 py-1.5 bg-gray-200 rounded hover:bg-gray-300"
        data-channel="@mrbeast">@mrbeast</button
      >
      <button
        class="px-3 py-1.5 bg-gray-200 rounded hover:bg-gray-300"
        data-channel="TSeries">TSeries</button
      >
      <button
        class="px-3 py-1.5 bg-gray-200 rounded hover:bg-gray-300"
        data-channel="https://www.youtube.com/@pewdiepie">@pewdiepie</button
      >
      <button
        class="px-3 py-1.5 bg-gray-200 rounded hover:bg-gray-300"
        data-channel="@5MinuteCrafts">@5MinuteCrafts</button
      >
      <button
        class="px-3 py-1.5 bg-gray-200 rounded hover:bg-gray-300"
        data-channel="SETIndia">SET India</button
      >
      <button
        class="px-3 py-1.5 bg-gray-200 rounded hover:bg-gray-300"
        data-channel="https://www.youtube.com/@MrBeastGaming"
        >@MrBeastGaming</button
      >
    </div>
    <p class="mt-6 text-sm text-gray-500">
      ⚡ Powered by the official YouTube API — Updated regularly & accurate.
    </p>
  </div>
</section>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const tags = document.querySelectorAll("[data-channel]");
    const input = document.getElementById("channel-input");
    if (!input) return;
    tags.forEach((tag) => {
      tag.addEventListener("click", () => {
        const value = tag.getAttribute("data-channel");
        input.value = value;
        input.focus();
      });
    });
  });
</script>
