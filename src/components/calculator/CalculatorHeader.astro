---
import { Calculator, TrendingUp, Target } from "lucide-react";
---

<div class="bg-white border-b border-slate-200">
  <div class="container mx-auto px-4 py-8 md:py-12">
    <div class="text-center max-w-3xl mx-auto">
      <div class="flex justify-center mb-4 md:mb-6">
        <div class="bg-red-100 p-3 md:p-4 rounded-full">
          <Calculator className="h-6 w-6 md:h-8 md:w-8 text-red-600" />
        </div>
      </div>
      <h1
        class="text-2xl md:text-4xl font-bold text-slate-900 mb-3 md:mb-4 px-4"
      >
        Personalized YouTube Income Calculator
      </h1>
      <p class="text-sm md:text-xl text-slate-600 mb-6 md:mb-8 px-4">
        Enter your income goals and get a detailed roadmap to YouTube success.
        Calculate the exact views, subscribers, and upload frequency you need.
      </p>
      <div
        class="flex flex-col sm:flex-row flex-wrap justify-center gap-4 md:gap-6 text-xs md:text-sm text-slate-500"
      >
        <div class="flex items-center gap-2 justify-center">
          <Target className="h-3 h-3 md:h-4 md:w-4 text-green-600" />
          <span>Goal-Based Planning</span>
        </div>
        <div class="flex items-center gap-2 justify-center">
          <TrendingUp className="h-3 h-3 md:h-4 md:w-4 text-blue-600" />
          <span>Growth Projections</span>
        </div>
        <div class="flex items-center gap-2 justify-center">
          <Calculator className="h-3 h-3 md:h-4 md:w-4 text-purple-600" />
          <span>Real-Time Calculations</span>
        </div>
      </div>
    </div>
  </div>
</div>
