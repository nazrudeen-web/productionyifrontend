---
import { Calculator } from "lucide-react";
import { Badge } from "@/components/ui/badge";
---

<div
  class="bg-gradient-to-r from-slate-900 to-slate-800 text-white py-8 md:py-16"
>
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center">
      <Badge
        variant="secondary"
        className="mb-3 md:mb-4 bg-red-600 text-white hover:bg-red-700 text-xs md:text-sm"
      >
        <Calculator className="w-3 h-3 mr-1" />
        Calculator
      </Badge>
      <h1 class="text-2xl md:text-4xl font-bold mb-4">
        Personalized YouTube Income Calculator
      </h1>
      <p class="text-sm md:text-lg text-slate-300">
        Enter your income goals and get a detailed roadmap to YouTube success.
        Calculate the exact views, subscribers, and upload frequency you need.
      </p>
    </div>
  </div>
</div>
