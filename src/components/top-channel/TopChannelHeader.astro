---
import { Badge } from "@/components/ui/badge";
import { TrendingUp } from "lucide-react";

// Props passed from the page
const { country } = Astro.props;

// If no country is passed, default to Global
const countryName = country?.name || "Global";
---

<section
  class="bg-gradient-to-r from-slate-900 to-slate-800 text-white py-8 md:py-16"
>
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center">
      <Badge
        variant="secondary"
        className="mb-3 md:mb-4 bg-red-600 text-white hover:bg-red-700 text-xs md:text-sm"
      >
        <TrendingUp className="w-3 h-3 mr-1" />
        Top YouTube Channels
      </Badge>
      <h1 class="text-2xl md:text-4xl font-bold mb-4">
        Discover the Most Popular YouTube Channels in {countryName}
      </h1>
      <p class="text-sm md:text-lg text-slate-300">
        Explore earnings, subscribers, and growth of leading YouTubers across
        {countryName !== "Global" ? ` ${countryName}` : " multiple countries"}.
      </p>
    </div>
  </div>
</section>
